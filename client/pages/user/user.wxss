/* pages/user/user.wxss */
.login-wrapper{
  background-color: #F6F9FC;
  min-height: 1200rpx;
  padding-left: 35rpx;
  padding-bottom: 65rpx;
}
.btn{
  position: fixed;
  display: flex;
  align-items: center;
  justify-content: center;
  bottom: 0rpx;
  width: 750rpx;
  height: 120rpx;
  font-size: 32rpx;
  color: #838484;
  background-color: #fff;
}
.tab-wrapper{
  display: flex; 
  width: 500rpx;
  padding: 40rpx 110rpx 0;
  justify-content: space-around;
}
.tabs{
  /* margin-left: 35rpx; */
  color:#e16531;
  font-size: 35rpx;
  line-height: 54rpx;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}
.highlighted-tab{
  /* margin-left: 35rpx; */
  color: #e16531;
  font-size: 35rpx;
  line-height: 54rpx;
  font-weight: bolder;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 5rpx solid #e16531
}
