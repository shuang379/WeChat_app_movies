.head-text{
  font-size: 32rpx;
  color: #e16531;
  font-weight: bolder;
  margin-right: 10rpx;
}
.head-icon{
  width: 30rpx;
  height: 30rpx;
  margin-top: 5rpx;
}
.comment-card{
  display: flex;
  height: 250rpx;
  width: 680rpx;
  margin-top: 45rpx;
  background-color: white;
}
.comment-card:last-child{
  margin-bottom: 100rpx;
}
.movie-image{
  width: 190rpx;
  height: 250rpx;
}
.movie-meta{
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-left: 30rpx;
  width: 450rpx;
}
.movie-title{
  font-size: 32rpx;
  font-weight: bolder;
}
.comment{
  font-size: 30rpx;
  margin-top: 35rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.user-meta{
  display: flex;
  align-items: center;
  margin-top: 20rpx;
}
.avatar{
  height: 50rpx;
  width: 50rpx;
  border-radius: 50%;
  margin-right: 15rpx;
}
.username{
  font-size: 30rpx;
  color: #838484;
  font-weight: bolder;
}