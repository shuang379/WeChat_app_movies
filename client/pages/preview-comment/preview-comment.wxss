/* pages/preview-comment/preview-comment.wxss */

page{
  display: block;
  min-height: 100%;
  background-color: #F6F9FC;
}
.wrapper-wrapper{
  position: relative;
}
.wrapper{
  position: absolute;
  display: flex;
  flex-direction: column;
  justify-items: center;
  align-items: center;
  width: 670rpx;
  height: 1020rpx;
  margin: 90rpx 40rpx 50rpx;
  background-color: white;
}
.title{
  font-weight: 900;
  font-size: 35rpx;
  margin: 230rpx 0 0;
}
.btn-wrapper{
  display: flex;
  position: absolute;
  top: 900rpx;
}
.space{
  width: 50rpx
}
.btn{
  display: flex;
  width: 250rpx;
  height: 70rpx;
}
.btn-icon{
  width: 40rpx;
  height: 40rpx;
  margin-right: 15rpx;
  margin-top: 12rpx;
}
.btn-text{
  font-size: 30rpx;
  color: #8a8a8a;
}
.image{
  position: absolute;
  height: 260rpx;
  margin-top: 40rpx;
}
.comment-wrapper{
  display: flex;
  flex-direction: column;
  position: absolute;
  margin: 400rpx 100rpx 0;
}
.user-info{
  display: flex;
  align-items: center;
}
.avatar {
  flex-shrink: 0;
  height: 80rpx;
  width: 80rpx;
  border-radius: 50%;
}
.user-text{
  font-size: 33rpx;
  margin-left: 15rpx;
  color: #5A5B5B;
}
.comment{
  font-size: 30rpx;
  color: #5A5B5B;
  margin-top: 30rpx; 
  height: 400rpx;
  width: 550rpx;
}
.audio_comment{
  font-size: 30rpx;
  height: 70rpx;
  width: 200rpx;
  margin-left: 100rpx;
  margin-top: 20rpx;
}