/* pages/comments/comments.wxss */
.background{
  display: flex;
  flex-direction: column;
  justify-items: center;
  align-items: center;
  background-color: #F6F9FC;
  height: 1100rpx;
}
.btn{
  position: fixed;
  display: flex;
  align-items: center;
  justify-content: center;
  bottom: 0rpx;
  width: 750rpx;
  height: 120rpx;
  font-size: 32rpx;
  color: #838484;
  background-color: #fff;
}
.comment-area{
  margin-top: 50rpx;
  width: 750rpx;
  height: 950rpx;
}
.comment-card{
  display: flex;
  flex-direction: column;
  justify-content: center;
  background-color: #fff;
  width: 750rpx;
  height: 200rpx;
  border-bottom: 2px solid rgba(151, 151, 151, 0.2);
}
.comment-card:last-child{
  border-bottom: none;
}
.user-info{
  display: flex;
  align-items: center;
  width: 550rpx;
  margin-left: 100rpx;
}
.user{
  padding-left: 30rpx;
  color: rgba(29, 29, 38, 0.8);
  font-weight: bolder;
  font-size: 35rpx;
}
.avatar {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
}
.comment{
  padding-top: 20rpx;
  font-size: 32rpx;
  width: 550rpx;
  margin-left: 100rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.comment-empty{
  display: flex;
  margin-top: 300rpx;
  align-items: center;
}
.empty-image{
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  margin-right: 30rpx;
}
.audio_comment{
  font-size: 30rpx;
  height: 70rpx;
  width: 200rpx;
  margin-left: 100rpx;
  margin-top: 20rpx;
}